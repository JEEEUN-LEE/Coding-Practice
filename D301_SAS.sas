/*------------------------------------------------------*/
/* SAS Macro: %DO 반복문 기본 구조                      */
/*------------------------------------------------------*/
/* 기본 문법
%DO 변수 = 시작값 %TO 종료값;
    /* 반복할 코드 */
%END;
*/

/*------------------------------------------------------*/
/* 예시 1: 1부터 5까지 반복                              */
/*------------------------------------------------------*/
%macro loop_ex1;
    %do i = 1 %to 5;
        %put No: &i;
    %end;
%mend;

%loop_ex1;



/*------------------------------------------------------*/
/* 예시 2: 50부터 30까지 -2씩 감소                       */
/*------------------------------------------------------*/
%macro loop_ex2;
    %do i = 50 %to 30 %by -2;   /* 50부터 시작해 30까지 -2씩 감소 */
        %put No: &i;
    %end;
%mend;

%loop_ex2;
